				filter="integer">
				<option
					value="1">JYES</option>
				<option
					value="0">JNO</option>
				</field>
	
				<field name="flexiTags" type="radio"
				class="btn-group btn-group-yesno"
				default="0"
				label="Display Tags"
				description="Show Add Tags"
				filter="integer">
				<option
					value="1">JYES</option>
				<option
					value="0">JNO</option>
				</field>
				
					<field name="flexiAuthor" type="radio"
				class="btn-group btn-group-yesno"
				default="1"
				label="Display Author"
				description="Show Author"
				filter="integer">
				<option
					value="1">JYES</option>
				<option
					value="0">JNO</option>
				</field>
				
