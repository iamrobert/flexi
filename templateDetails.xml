	<positions>
		<position>menu</position>
		<position>submenu</position>
		<position>toolbar</position>
		<position>title</position>
		<position>status</position>
		<position>icon</position>
		<position>cp_shell</position>
		<position>cpanel</position>
		<position>bottom</position>
		<position>footer</position>
		<position>login</position>
		<position>debug</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.iamrobert3.ini</language>
		<language tag="en-GB">en-GB/en-GB.iamrobert3.sys.ini</language>
	</languages>
<config>
		<fields name="params">
			<fieldset name="advanced">

				<field name="templateColor" class="" type="color" default="#383a41"
				validate="color"
				label="TPL_IAMR_COLOR_LABEL"
				description="TPL_IAMR_COLOR_DESC" />

				<field name="headerColor" class="" type="color" default="#f9f9f9"
				validate="color"
				label="TPL_IAMR_COLOR_HEADER_LABEL"
				description="TPL_IAMR_COLOR_HEADER_DESC" />

				<field name="sidebarColor" class="" type="color" default="#0088CC"
				validate="color"
				label="TPL_IAMR_COLOR_SIDEBAR_LABEL"
				description="TPL_IAMR_COLOR_SIDEBAR_DESC" />

				<field name="linkColor" class="" type="color" default="#0088CC"
				validate="color"
				label="TPL_IAMR_COLOR_LINK_LABEL"
				description="TPL_IAMR_COLOR_LINK_DESC" />

<field name="hoverColor" class="" type="color" default="#005580"
				validate="color"
				label="Hover Color"
				description="Color on Hover" />
 
<field name="flexiColor" class="" type="color" default="#7761a7"
				validate="color"
				label="FLEXIcontent Main Color"
				description="FLEXIcontent Color" />
				
				<field name="logoFile" class="" type="media" default=""
				label="TPL_IAMR_LOGO_LABEL"
				description="TPL_IAMR_LOGO_DESC" />

				<field name="loginLogoFile" class="" type="media" default=""
				label="TPL_IAMR_LOGIN_LOGO_LABEL"
				description="TPL_IAMR_LOGIN_LOGO_DESC" />

				<field name="admin_menus" type="radio"
				class="btn-group btn-group-yesno"
				default="1"
				label="TPL_IAMR_FIELD_ADMIN_MENUS_LABEL"
				description="TPL_IAMR_FIELD_ADMIN_MENUS_DESC"
				filter="integer">
				<option
					value="1">JYES</option>
				<option
					value="0">JNO</option>
				</field>

				<field name="displayHeader" type="radio"
				class="btn-group btn-group-yesno"
				default="1"
				label="TPL_IAMR_HEADER_LABEL"
				description="TPL_IAMR_HEADER_DESC"
				filter="integer">
				<option
					value="1">JYES</option>
				<option
					value="0">JNO</option>
				</field>

				<field name="statusFixed" type="list"
				default="1"
				label="TPL_IAMR_STATUS_LABEL"
				description="TPL_IAMR_STATUS_DESC"
				filter="integer">
				<option
					value="1">TPL_IAMR_STATUS_BOTTOM</option>
				<option
					value="0">TPL_IAMR_STATUS_TOP</option>
				</field>

				<field name="stickyToolbar" type="radio"
				class="btn-group btn-group-yesno"
				default="1"
				label="TPL_IAMR_STICKY_LABEL"
				description="TPL_IAMR_STICKY_DESC"
				filter="integer">
				<option
					value="1">JYES</option>
				<option
					value="0">JNO</option>
				</field>
				
				
				<field name="amm_used" type="radio"
				class="btn-group btn-group-yesno"
				default="0"
				label="Admin Menu Manager Used"
				description=""
				filter="integer">
				<option
					value="1">JYES</option>
				<option
					value="0">JNO</option>
				</field>

			</fieldset>
			
			
				<fieldset name="flexicontent">
		
