				class="btn-group btn-group-yesno"
				default="1"
				label="Display Joomla Compatibility Mode"
				description="Show Joomla Compatibility Mode"
				filter="integer">
				<option
					value="1">JYES</option>
				<option
					value="0">JNO</option>
				</field>
				
				<field name="flexiLang" type="radio"
				class="btn-group btn-group-yesno"
				default="1"
				label="Display Language"
				description="Show Language Options"
				filter="integer">
				<option
					value="1">JYES</option>
				<option
					value="0">JNO</option>
				</field>
				
				<field name="flexiVotes" type="radio"
				class="btn-group btn-group-yesno"
				default="0"
				label="Display Votes"
				description="Show FLEXIcontent Votes in Item View"
				filter="integer">
				<option
					value="1">JYES</option>
				<option
					value="0">JNO</option>
				</field>
				
				<field name="flexiRatings" type="radio"
				class="btn-group btn-group-yesno"
				default="0"
				label="Display Ratings"
				description="Show FLEXIcontent Ratings"
				filter="integer">
				<option
					value="1">JYES</option>
				<option
					value="0">JNO</option>
				</field>
		
            <field name="flexiHits" type="radio"
				class="btn-group btn-group-yesno"
				default="0"
				label="Display Hits"
				description="Show FLEXIcontent Hits"
				filter="integer">
				<option
					value="1">JYES</option>
				<option
					value="0">JNO</option>
				</field>
				
					
				<field name="flexiMoreButton" type="radio"
				class="btn-group btn-group-yesno"
				default="0"
				label="Display More Button"
				description="Show FLEXIcontent More DropDown Button in Item View"
				filter="integer">
				<option
					value="1">JYES</option>
				<option
					value="0">JNO</option>
				</field>
					
